  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Wikiful", root_path, :class => "brand" %>
       <div class="session-controls"> 
          <% if current_user %>
            <%= link_to "Log Out", session_path("current"), method: 'delete', :class => 'right btn btn-primary btn-mini' %>
            <p class="right" style="padding-right: 10px;">Logged in as <%= current_user.email %>.</p>
          <% else %>
            <div class="btn-group">
               <%= link_to "Sign Up", signup_path, :class => "btn btn-mini" %>
               <%= link_to "Log In", login_path, :class => "btn btn-mini" %>
            </div>
          <% end %>
       </div>
    </div>
  </div>
