<h1>Welcome to Wikiful!</h1>
<h3>Here are some recent articles:</h3>
<% @recent_articles.each do |article| %>
	<h4><%= link_to article.title, article %></h4>
	<p>Posted on: <%= article.created_at.strftime('%b %d, %Y') %></p>
	<p>Categories: 
		<% article.categories.each do |category| %> 
			<%= link_to category.name, category %> 
		<% end %>
	</p>
	<p> <%= truncate(article.content, length: 100) %> <%= link_to 'Read more', article %></p>
<% end %>
